            <TextBlock x:Name="uiY0LabelText" Text="0" Canvas.Left="-30" Canvas.Top="300" Margin="-7.4,-12.2,0,0" Foreground="White" MinWidth="30" TextAlignment="Right"/>
            <Line x:Name="uiY0LabelTick" Stroke="White" X1="-5" X2="300" Y1="300" Y2="300" />

            <TextBlock x:Name="uiY1LabelText" Text="100" Canvas.Left="-30" Canvas.Top="0" Margin="-7.4,-12.2,0,0" Foreground="White" MinWidth="30" TextAlignment="Right"/>
            <Line x:Name="uiY1LabelTick" Stroke="White" X1="-5" X2="0" Y1="0" Y2="0" />

            <TextBlock x:Name="uiX0LabelText" Text="0" Canvas.Left="0" Canvas.Top="300" Margin="-4,5,0,0" Foreground="White" />
            <Line x:Name="uiX0LabelTick" Stroke="White" X1="0" X2="0" Y1="300" Y2="0" />

            <TextBlock x:Name="uiX1LabelText" Text="100" Canvas.Left="300" Canvas.Top="300" Margin="-36,5,0,0" Foreground="White" MinWidth="40" TextAlignment="Right" />
            <Line x:Name="uiX1LabelTick" Stroke="White" X1="300" X2="300" Y1="300" Y2="305" />

            <Line x:Name="uiRegressionLine" Stroke="White" X1="0" X2="300" Y1="300" Y2="0" />

            <TextBlock x:Name="uiTitleX" Text="Data" Margin="-4,5,0,0" Foreground="White" Canvas.Top="305" Canvas.Left="0" Width="300" TextAlignment="Center" />
            <TextBlock x:Name="uiTitleY" Text="Response" Margin="-15,0,0,0" Foreground="White" Canvas.Left="-20" Canvas.Top="300" Width="300" TextAlignment="Center">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="270" />
                </TextBlock.RenderTransform>
            </TextBlock>

        </Canvas>
    </Border>
