a2 = cam.Analyze()
a2.Image= imgAnalysisPartial

FOREVER 

REM Step three: HTML color output
REM and set the background color
FUNCTION HtmlColor (r, g, b)
    color = String.Escape (‚Äúcolor‚Äù, r, g, b)
    Screen.ClearLine (2)
    PRINT color
    GLOBAL grf
    grf.Background  = color
